@model IEnumerable<Gantt.Web.Models.CalendrierViewModel>
@{
	ViewBag.Title = "Calendrier";
}

<h4>@ViewBag.Title</h4>
<hr />
<link href='~/Scripts/fullcalendar/main.css' rel='stylesheet' />


<style>

	/*body {
		margin: 40px 10px;
		padding: 0;
		font-family: Arial, Helvetica Neue, Helvetica, sans-serif;
		font-size: 14px;
	}*/

	#calendar {
		max-width: 1100px;
/*		margin: 0 auto;*/
	}
</style>


<script>
	var calibrages = [];
</script>	
	@foreach(var item in Model)
	{
		<script>
			var obj = {};
			
			obj.title = "@item.Description";
			obj.start = "@item.Date";
			obj.end = "@item.Date";

			calibrages.push(obj);
		</script>
	}

<div id='calendar'></div>

<script src="~/Scripts/fullcalendar/main.js"></script>
@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
<script>

	document.addEventListener('DOMContentLoaded', function () {
		var calendarEl = document.getElementById('calendar');

		var calendar = new FullCalendar.Calendar(calendarEl, {
			headerToolbar: {
				left: 'prev,next today',
				center: 'title',
				right: 'dayGridMonth,timeGridWeek,timeGridDay,listMonth'
			},
			editable: false,
			locale: "fr",
			selectable: true,
			businessHours: true,
			dayMaxEvents: true, // allow "more" link when too many events
			events: calibrages
		});

		calendar.render();
	});

</script>
}