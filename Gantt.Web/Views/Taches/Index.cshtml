@model IEnumerable<Gantt.Web.Models.Tache>

@{
	ViewBag.Title = "Liste de tâches";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Liste de tâches</h4>

<p>
	<a href="@Url.Action("Create")" class="btn btn-outline-primary btn-sm"><i class="fas fa-plus-circle"></i> Créer une tâche</a>
</p>
<table class="table table-hover display">
	<thead>
		<tr>
			<th>
				Tâche
			</th>
			<th>
				Composant
			</th>
			<th>
				Date de début
			</th>
			<th>
				Durée
			</th>
			<th>
				Progression
			</th>

			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Text)
				</td>
				<td>
					@item.Composant
					<br />
					<small class="badge badge-success">
						@item.Project
					</small>
				</td>
				<td>
					@item.StartDate.ToString("dd/MM/yyyy")
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Duration)
				</td>
				<td>
					<div class="progress">
						<div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: @(item.Progress*100)%">@(item.Progress*100)%</div>
					</div>
				</td>

				<td>
					@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
					@Html.ActionLink("Details", "Details", new { id = item.Id }) |
					@Html.ActionLink("Delete", "Delete", new { id = item.Id })
				</td>
			</tr>
		}
	</tbody>
</table>
